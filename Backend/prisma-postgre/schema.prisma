generator client {
  provider = "prisma-client"
  output   = "../generated/prisma-postgre"
}

datasource db {
  provider = "postgresql"
}

model Main_Instagram_Data {
  id               Int        @id @default(autoincrement())
  pk_def_insta     BigInt     @unique
  username         String     @unique
  fullname         String?
  is_private       Boolean
  media_post_total Int
  followers        Int
  following        Int
  biography        String?
  is_mutual        Boolean
  last_update      DateTime?  @updatedAt

  relations        Relation_Status[]
}

model Relation_Status {
  id                Int      @id @default(autoincrement())
  relational        String   @unique
  text_color String @db.Char(7)
  bg_color   String @db.Char(7)

  @@unique([text_color, bg_color])

  instagram_users   Main_Instagram_Data[]
}

model Main_Account_Center {
  pk        Int    @id @default(1)
  id        Int
  username  String
}