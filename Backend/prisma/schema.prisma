generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Main_Instagram_Data {
  id               Int      @id @default(autoincrement())
  pk_def_insta     BigInt
  username         String   @unique
  fullname         String?
  profile_picture  String   @db.VarChar(2048)
  is_private       Boolean
  media_post_total Int
  followers        Int
  following        Int
  biography        String?
  is_mutual        Boolean

  relations        Relation_Status[]
}

model Relation_Status {
  id                Int      @id @default(autoincrement())
  relational        String   @unique
  text_color String @db.Char(6)
  bg_color   String @db.Char(6)

  @@unique([text_color, bg_color])

  instagram_users   Main_Instagram_Data[]
}